# ===========================================
# CFG Ukraine Analytics - Environment Config
# ===========================================

# Application
APP_NAME=cfg-ukraine-analytics
APP_ENV=development
DEBUG=true
LOG_LEVEL=INFO

# ===========================================
# AZURE / ONELAKE CONFIGURATION
# ===========================================

AZURE_TENANT_ID=your-tenant-id-here
AZURE_CLIENT_ID=your-client-id-here
AZURE_CLIENT_SECRET=your-client-secret-here
ONELAKE_WORKSPACE_ID=your-workspace-id-here
ONELAKE_LAKEHOUSE_ID=your-lakehouse-id-here

# ===========================================
# LLM PROVIDERS
# ===========================================

OPENAI_API_KEY=sk-your-openai-api-key-here

# ===========================================
# VECTOR DATABASE (QDRANT)
# ===========================================

QDRANT_HOST=localhost
QDRANT_PORT=6333

# ===========================================
# CACHE (REDIS)
# ===========================================

REDIS_HOST=localhost
REDIS_PORT=6379